<script>
import headerCommon from '../../components/header/headerCommon.vue'
// import ports from './../../port.js'
import ajax from './../../vueResource.ajax.js'
import Bscroll from 'better-scroll'
import { Navbar, TabItem, TabContainer, TabContainerItem, Toast } from 'mint-ui'

export default {
    data () {
        return {
            viewTitle: '优惠券',
            iconType: 'icon-fanhui',
            rightParams: {
                path: '/user/direction',
                desc: '使用说明'
            },
            swipeable: true,
            selected: '1',
            // 可用数据
            ableData: [],
            // 不可用数据
            unAbleData: []
        }
    },
    components: {
        'header-common': headerCommon,
        'mt-navbar': Navbar,
        'mt-tab-item': TabItem,
        'mt-tab-container': TabContainer,
        'mt-tab-container-item': TabContainerItem
    },
    beforeCreate () {
        this.$store.commit('hideFoot')
    },
    created () {
        this.getDiscount(true)
        this.$nextTick(function () {
            this._initScroll()
        })
    },
    methods: {
        loadMore () {},
        _initScroll () {
            this.viewScroll1 = new Bscroll(this.$refs.slideBar1, {
                click: true,
                scrollY: true
            })
            this.viewScroll2 = new Bscroll(this.$refs.slideBar2, {
                click: true,
                scrollY: true
            })
        },
        getDiscount (val) {
            var page = 1
            var params = '?dto.isUseable=' + val + '&dto.page=' + page + '&dto.pageSize=10'
            ajax.ajax({
                'vue': this,
                'port': 'GetCurrentCoupons',
                'type': 'get',
                'req_params': params,
                'statusOk': function (res, v) {
                    console.log(res.data)
                    if (val) {
                        v.ableData = res.data.data
                    } else {
                        v.unAbleData = res.data.data
                    }
                    setTimeout(function () {
                        v.viewScroll1.refresh()
                        v.viewScroll2.refresh()
                    }, 300)
                },
                'statusError': function (res, v) {
                    Toast('获取折扣券失败')
                }
            })
        }
    },
    watch: {
        selected (cur, old) {
            console.log(cur)
            if (cur === 1) {
                this.getDiscount(true)
            } else {
                this.getDiscount(false)
            }
        }
    }
}
</script>

