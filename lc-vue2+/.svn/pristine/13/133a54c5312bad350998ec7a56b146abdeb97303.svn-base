<template>
    <div class="headerIndex">
        <div class="wrap">
            <div class="currentArea iconfont icon-chevron-copy-copy-copy"  v-if="curAreaName">
                <router-link to="/position" class="posi">{{curAreaName?curAreaName:'请选择地区'}}</router-link>
            </div>
            <div class="title">尙门理车</div>
            <div class="headRight">
                <span class="search iconfont icon-sousuo1"></span>
                <span class="msgTip iconfont icon-xinxi" @click="$router.push('/message')"></span>
            </div>
        </div>
        <div class="wrap wrap2">
            <div class="currentArea iconfont icon-chevron-copy-copy-copy"  v-if="curAreaName">
                <router-link to="/position" class="posi">{{curAreaName?curAreaName:'请选择地区'}}</router-link>
            </div>
            <div class="title">尙门理车</div>
            <div class="headRight">
                <span class="search iconfont icon-sousuo1" @click="searchEmit"></span>
                <span class="msgTip iconfont icon-xinxi" @click="$router.push('/message')"></span>
            </div>
        </div>
    </div>
</template>

<script type="text/ecmascript-6">
    import Bscroll from 'better-scroll'
    import ports from './../../port.js'

    export default {
        data () {
            return {
                colorArr: ['#FFFFFF', '#F9F5EF', '#F3EBDF', '#ECE2CF', '#E6D8BF', '#E0CEAF', '#DAC49F', '#D3BB8F', '#CDB17F', '#C7A76F'],
                // 当前定位信息
                curPositionInfo: {},
                // 当前位置信息
                curArea: {}
            }
        },
        components: {
            Bscroll
        },
        computed: {
            curAreaName () {
                return this.$store.state.user.curAreaName
            },
            addComp () {
                return this.curPositionInfo
            }
        },
        watch: {
            addComp (val, val2) {
                this.CheckRegion(val)
            }
        },
        created () {
            var that = this
            window.onscroll = function () {
                var index = document.body.scrollTop * 0.005
                if (document.querySelector('.wrap2')) {
                    document.querySelector('.wrap2').style.opacity = index
                }
            }
            this.checkPosi()
        },
        methods: {
            searchEmit () {
                this.$emit('showSearch')
            },
            // 检索地区是否已存在 并返回ID
            CheckRegion (val) {
                var params = {
                    "province": val.province,
                    "city": val.city,
                    "county": val.district
                }
                this.$http.post(ports.port.CheckRegion, params).then((res) => {
                    if (res.data.success === true) {
                        // window.alert('检测到区域存在')
                        window.sessionStorage.locationData = val.province+','+val.city+','+val.district
                        this.curArea = res.data.data
                        this.CheckStoreServiceRegion(val)
                    }
                })
            },
            // 检测定位是否成功
            checkPosi () {
                // if (this.$store.state.user.curAreaName) {
                //     return
                // }
                var that = this
                var timeRoll = setInterval(function () {
                    if (window.sessionStorage.lng) {
                        // window.alert('检测到定位信息')
                        that.positionCur(timeRoll)

                    }
                },1000)
            },
            // 检查区域是否已开通
            CheckStoreServiceRegion (val) {
                var params = {
                    countyId: this.curArea.id
                }
                this.$http.post(ports.port.CheckStoreServiceRegion, params).then((res) => {
                    if (res.data.success === true) {
                        if (!res.data.data) {
                            window.$.PageDialog.ok('当前定位的地区暂未开通尚门理车服务')
                        } else {
                            this.$store.state.user.curAreaID = this.curArea.id
                            // window.alert("当前城市ID"+this.curArea.id)
                            window.sessionStorage.curAreaID = this.curArea.id
                            // window.$.PageDialog.ok('当前定位的地区:'+val.city+ val.district)
                        }
                    }
                })
            },
            // 获取当前定位的区域信息
            positionCur (val) {
                clearInterval(val)
                var p = {
                    lat: window.sessionStorage.lng,
                    lng: window.sessionStorage.lat
                }
                var point = new window.BMap.Point(p.lat, p.lng)
                var that = this
                window.geoc.getLocation(point, function(rs){
                    var addComp = rs.addressComponents
                    that.$store.state.user.curAreaName = addComp.city+addComp.district
                    // window.alert("当前城市"+that.$store.state.user.curAreaName)
                    that.curPositionInfo = addComp
                });
            }
        }
    }
</script>

